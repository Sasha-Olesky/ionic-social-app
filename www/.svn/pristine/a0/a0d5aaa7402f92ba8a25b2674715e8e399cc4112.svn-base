<ion-view class="personal-space">  
  <ion-content>  	
	<div class="profile-box">
		<h2><img src="img/personal_space/ic_heart.png"/>内心独白</h2>
		<ion-list>
			<div class="radio-group">
				<ion-radio ng-repeat="item in profile.monologue_conditions" ng-model="profile.monologue" ng-value="item.id" ng-disabled="true">{{item.monologue}}</ion-radio>
			</div>
		</ion-list>
	</div>
	<div class="profile-box dinformations">
		<h2><img src="img/personal_space/ic_note.png"/>详细资料</h2>
		<ion-list>
			<ion-item class="item" ng-repeat="item in profile.details">
				{{item.label}}<span class="item-note">{{item.value}}</span>
			</ion-item>
		</ion-list>
	</div>
	<div class="profile-box contact-information">
		<h2><img src="img/personal_space/ic_phone.png"/>联系方式</h2>
		<ion-list>
			<div class="item item-input">
				<span class="input-label">QQ：</span>
				<input type="{{profile.qq.type}}" name="qq" ng-model="profile.qq.value" ng-readonly="true">
				<div class="other-button" ng-if="user.membership==0">
					<span class="item-note">升级VIP可见</span>
					<button class="button font-positive button-clear" ng-click="upgradeMembership()">（点击查看）</button>
				</div>
			</div>
			<div class="item item-input">
				<span class="input-label">手机号：</span>
				<input type="{{profile.phone.type}}" name="phone" ng-model="profile.phone.value" ng-readonly="true">
				<div class="other-button" ng-if="user.membership==0">
					<span class="item-note">升级VIP可见</span>
					<button class="button font-positive button-clear" ng-click="upgradeMembership()">（点击查看）</button>
				</div>
			</div>		
		</ion-list>
	</div>
	<div class="profile-box dinformations">
		<h2><img src="img/personal_space/ic_group.png"/>征友条件</h2>
		<ion-list>
			<ion-item class="item" ng-repeat="item in profile.partner_conditions">
				{{item.label}}<span class="item-note">{{item.value}}</span>
			</ion-item>
		</ion-list>
	</div>
  </ion-content>
</ion-view>
