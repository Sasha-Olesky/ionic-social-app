<ion-view class="agree">  
  <ion-content lazy-scroll>
	<ion-refresher
		pulling-text="Pull to refresh..."
		on-refresh="doRefresh()">
	</ion-refresher>
	<ion-scroll>
		<ion-item class="item-thumbnail-left" ng-repeat="item in follows" type="item-text-wrap">
			<img image-lazy-src="{{item.photo}}" ng-click="go_personal(item.userid)" image-lazy-loader="ios"/>
			<h2>{{item.username}}<i class="icon" ng-class="item.gender_icon"></i></h2>
			<p><span>{{item.age}}岁</span> | <span>{{item.stature}}</span> | <span>{{item.address}}<span></p>
			<button class="button-greet" ng-click="send_greeting(item.userid, item.is_sent, $index)" ng-class="{true:'active'}[item.is_sent]">打招呼</button>
		</ion-item>
		<ion-infinite-scroll ng-if="more"
			on-infinite="loadMore()"
			distance="2%">
		</ion-infinite-scroll>
	</ion-scroll>
  </ion-content>
</ion-view>
