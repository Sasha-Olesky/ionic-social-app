<ion-header-bar class="background-positive">	
	<button class="button button-icon ion-ios-arrow-back" ng-click="$ionicGoBack()"></button>
	<h1 class="title account-title" ng-class="marginleft">我的动态</h1>
</ion-header-bar>
<ion-view class="tidings" title="我的动态">  
  <ion-content>    
	<ion-scroll class="padding">
		<ion-item ng-repeat="item in tidings">
			<div class="dynamics-summary">
				<img ng-src="{{item.photo}}"/>
				<h2 class="font2">{{item.name}}<i class="icon assertive" ng-class="item.ion"></i>
				<a href="#" class="pull-right"><i class="icon ion-trash-a positive font2"></i></a></h2>
				<p>{{item.time}}</p>
			</div>
			<div class="desc" ng-bind-html="item.description"></div>			
			<div class="buttons">
				<button class="world"><i class="icon ion-ios-world"></i></button>
				<button class="thumbsup"><i class="icon ion-thumbsup"></i></button>
				<button class="chatbox"><i class="icon ion-chatbox-working"></i></button>
			</div>
			<div class="say">
				<input type="text" ng-model="item.say" placeholder="我来说两句"/>
			</div>
		</ion-item>
	<ion-scroll>
  </ion-content>
</ion-view>
