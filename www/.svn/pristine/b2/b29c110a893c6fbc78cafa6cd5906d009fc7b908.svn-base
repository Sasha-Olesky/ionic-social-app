<ion-header-bar class="background-positive present-shop">
	<button class="button button-icon ion-ios-arrow-back" ng-click="$ionicGoBack()"></button>
	<h1 class="title account-title" ng-class="marginleft">礼物商店</h1>
</ion-header-bar>
<ion-view class="present-shop">  
  <ion-content>	
	<ion-scroll class="product-scroll" ng-style="{maxHeight:maxScrollHeight}">
		<ion-item ng-repeat="item in products" ng-click="goBuyProduct($index)">
			<img ng-src="{{item.photo}}" class="img-responsive"/>
			<p class="product-name">{{item.name}}</p>
			<p class="product-gold"><span>{{item.integral}}</span><img src="img/personal_space/ic_gold.png"/></p>
		</ion-item>
	</ion-scroll>
	<div class="top-curtain"></div>
	<div class="buy-product">
		<p>我的金币：<span>{{my_integral}}</span><img src="img/personal_space/ic_gold.png"/></p>
		<button ng-click="buyConfirm()">充值</button>
	</div>
  </ion-content>
</ion-view>
