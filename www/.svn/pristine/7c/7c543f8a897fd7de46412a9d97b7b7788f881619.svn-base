<ion-header-bar class="background-positive">	
	<button class="button button-icon ion-ios-arrow-back" ng-click="go_back()"></button>
	<h1 class="title account-title" ng-class="marginleft">我的动态</h1>
</ion-header-bar>
<ion-view class="tidings" title="我的动态">  
  <ion-content lazy-scroll>  	
	<ion-scroll class="padding">
		<ion-item ng-repeat="item in posts">
			<div class="dynamics-summary">
				<div class="avatar-photo">
					<img image-lazy-src="{{item.photo}}" class="avatar" image-lazy-loader="ios" image-lazy-distance-from-bottom-to-load="100"/>
				</div>				
				<h2 class="font2">「{{item.username}}」<i class="icon" ng-class="item.gender_icon"></i>
				<a class="pull-right" ng-click="del_post(item.id, $index)"><i class="icon ion-trash-a positive font2"></i></a></h2>
				<p>{{item.reg_date}}</p>
			</div>
			<div class="desc" ng-bind-html="item.content"></div>	
			<div class="images" ng-show="item.images?true:false">
				<!--<div class="images-photo" ng-class="item.image_class" ng-repeat="img in item.images">
					<img image-lazy-src="{{img.src}}" image-lazy-loader="ios" image-lazy-distance-from-bottom-to-load="100"/>
				</div>-->
				<ion-gallery ion-gallery-items="item.images"></ion-gallery>
			</div>
			<div class="buttons">
				<button class="chatbox" ng-click="start_comment(item.id, $index)"><i class="icon ion-chatbox-working"></i></button>
			</div>
			<div class="like" ng-show="item.like_users.length?true:false">
				<img src="img/dynamics/like_on.png" class="icon-like"/>
				<div class="like-photo" ng-repeat="like in item.like_users">
					<img image-lazy-src="{{like.photo}}" class="avatar" ng-click="go_personal(like.id)" image-lazy-loader="ios" image-lazy-distance-from-bottom-to-load="100"/>
				</div>				
			</div>
			<div class="comments" ng-show="item.comments.length?true:false">
				<p ng-repeat="cmt in item.comments">
					<span class="username">{{cmt.username}} : </span>
					<span class="comment">{{cmt.comment}}</span>
				</p>
			</div>
			<div class="say" ng-click="start_comment(item.id, $index)">
				<p>我来说两句</p><i class="icon ion-happy-outline smile"></i>
			</div>			
		</ion-item>
		<ion-infinite-scroll ng-if="more"
			on-infinite="loadMore()"
			distance="2%">
		</ion-infinite-scroll>
	</ion-scroll>
  </ion-content>
</ion-view>
<ion-footer-bar class="dynamics-say" ng-show="show_footer">
	<div class="say-something">
		<input type="text" placeholder="我来说两句" id="say_something" ng-blur="hide_say()"/>
		<button ng-click="send_comment()"><i class="icon ion-paper-airplane"></i></button>
	</div>
</ion-footer-bar>
