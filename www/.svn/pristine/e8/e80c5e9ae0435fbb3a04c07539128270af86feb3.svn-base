<ion-header-bar class="background-positive">
	<div class="buttons">
		<button class="button button-icon ion-ios-arrow-back" ng-click="go_state('tab.settings')"></button>
	</div>
	<h1 class="title account-title" ng-class="marginleft">修改密码</h1>
</ion-header-bar>
<ion-view>  
  <ion-content>    
	<ion-list>
		<label class="item item-input">
			<span class="input-label">当前密码：</span>
			<input type="password" name="cur_password" ng-model="cur_password">
		</label>
		<label class="item item-input">
			<span class="input-label">新密码：</span>
			<input type="password" name="new_password" ng-model="new_password">
		</label>		
		<label class="item item-input">
			<span class="input-label">确认密码：</span>
			<input type="password" name="confirm_password" ng-model="confirm_password">
		</label>		
	</ion-list>	
	<div class="button-save">
		<button class="button background-positive button-positive">保存</button>
	</div>
  </ion-content>
</ion-view>
