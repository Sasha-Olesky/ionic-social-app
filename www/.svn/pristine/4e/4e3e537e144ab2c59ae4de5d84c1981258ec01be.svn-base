<ion-header-bar align-title="center" class="background-positive">	
	<div class="buttons">
		<button class="button button-icon ion-ios-arrow-back" ng-click="$ionicGoBack()"></button>
    </div>
	<h1 class="title">用户资料</h1>	
	<div class="buttons">
        <button class="button button-icon" ng-click="nextToLogin(true)" class="btn-public">跳过</button>
    </div>
</ion-header-bar>
<ion-view view-title="用户资料">    
    <ion-content>
        <div class="regContentView text-center">
            <div class="userinfo">
                <div class="annoance">
                    <img src="img/login/actress.png">
                    <div class="talking">
                        <img src="img/login/talk_tag.png">
                        <span>帅哥，你的身高是多少？</span>
                    </div>
                </div>
                <div style="clear:both;"></div>
                <ion-list>
                    <ion-radio ng-repeat="item in statures" ng-model="new_user.stature_id" ng-value="item.id">{{item.stature}}</ion-radio>                    
                </ion-list>
            </div>

            <div class="warp-next-btn text-right"><button ng-click="nextToLogin(false)">下一步</button></div>
        </div>
    </ion-content>
</ion-view>