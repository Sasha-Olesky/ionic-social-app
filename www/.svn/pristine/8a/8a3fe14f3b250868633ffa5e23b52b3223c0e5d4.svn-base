<ion-header-bar class="background-positive">
	<button class="button button-icon ion-ios-arrow-back" ng-click="go_back()"></button>
	<h1 class="title account-title" ng-class="marginleft">同意见面</h1>
</ion-header-bar>
<ion-view class="agree">  
  <ion-content> 	
	<ion-scroll style="max-height:{{max_list_height3}}px">
		<ion-item class="item-thumbnail-left" ng-repeat="item in meets" type="item-text-wrap">
			<img ng-src="{{item.photo}}" ng-click="go_personal(item.userid)"/>
			<h2>{{item.username}}<i class="icon" ng-class="item.gender_icon"></i></h2>
			<p ng-hide="item.is_sent"><span>{{item.age}}岁</span> | <span>{{item.stature}}cm</span> | <span>{{item.address}}<span></p>
			<p ng-show="item.is_sent" class="follow-greeting"><img ng-src="{{item.greeting_icon}}"/><span>{{item.greeting}}</span></p>
			<button class="button-greet" ng-click="send_greeting('reply', item.userid, item.is_replied, $index)" ng-class="{true:'active'}[item.is_replied]">打招呼</button>
		</ion-item>
		<ion-infinite-scroll ng-if="more"
			on-infinite="loadMore()"
			distance="2%">
		</ion-infinite-scroll>
	<ion-scroll>
  </ion-content>
</ion-view>
