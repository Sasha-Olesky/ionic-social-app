<ion-view view-title="动态" class="tidings">
    <ion-nav-buttons side="left">
        <a ng-click="doSomething()">
            <img src="img/home/bell.png">
        </a>
    </ion-nav-buttons>
    <ion-content class="padding">
        <div class="loading" ng-show="loading"><img src="img/tab/loading.gif"/></div>
        <ion-scroll class="padding">
            <ion-item ng-repeat="item in posts">
                <div class="dynamics-summary">
                    <img ng-src="{{item.photo}}"/>
                    <h2 class="font2">「{{item.username}}」<i class="icon assertive" ng-class="item.gender_icon"></i>
                        <a class="pull-right" ng-click="del_post(item.id, $index)"><i class="icon ion-trash-a positive font2"></i></a></h2>
                    <p>{{item.reg_date}}</p>
                </div>
                <div class="desc" ng-bind-html="item.content"></div>
                <div class="images" ng-show="item.images?true:false">
                    <div ng-class="item.image_class" ng-repeat="img in item.images">
                        <img ng-src="{{img}}" />
                    </div>
                </div>
                <div class="comments">
                    <p ng-repeat="cmt in item.comments">
                        <span class="username">{{cmt.username}} : </span>
                        <span class="comment">{{cmt.comment}}</span>
                    </p>
                </div>
                <div class="like">
                    <img src="img/dynamics/like_on.png" class="icon-like"/>
                    <img ng-repeat="like in item.like_users" ng-src="{{like.photo}}" class="avatar" ng-click="go_personal(like.id)"/>
                </div>
                <!--
                <div class="buttons">
                    <button class="world"><i class="icon ion-ios-world"></i></button>
                    <button class="thumbsup"><i class="icon ion-thumbsup"></i></button>
                    <button class="chatbox"><i class="icon ion-chatbox-working"></i></button>
                </div>-->
                <div class="say">
                    <input type="text" ng-model="item.comment" placeholder="我来说两句"/>
                    <button ng-click="send_comment(item.id, $index)"><i class="icon ion-paper-airplane"></i></button>
                </div>
            </ion-item>
    </ion-content>
</ion-view>